<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@color/dim_gray"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_final"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        tools:src="@drawable/headshot_7" />

    <TextView
        android:id="@+id/display_name_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_avatar_final"
        android:layout_marginBottom="26dp"
        android:layout_toEndOf="@+id/img_avatar_final"
        android:layout_toRightOf="@+id/img_avatar_final"
        android:textColor="#212121"
        android:textStyle="bold"
        tools:text="Marcelino" />

    <TextView
        android:id="@+id/text_view_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_avatar_final"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        tools:text="Online" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/img_avatar_final"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="201dp"
        android:layout_marginEnd="79dp"
        android:onClick="onCheckboxClicked"
        android:text="CheckBox" /><![CDATA[







    />



]]>
</RelativeLayout>