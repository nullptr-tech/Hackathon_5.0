<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:background="#FFFf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_final"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@drawable/headshot_7"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/display_name_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marcelino"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_alignBottom="@+id/img_avatar_final"
        android:layout_toEndOf="@+id/img_avatar_final"
        android:layout_marginBottom="26dp"
        android:layout_toRightOf="@+id/img_avatar_final" />

    <TextView
        android:id="@+id/text_view_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        tools:text="Online" />

    <ListView
        android:id="@+id/cannotDo"
        android:layout_width="159dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="198dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="27dp" />

    <ListView
        android:id="@+id/canDo"
        android:layout_width="159dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="200dp" />


</RelativeLayout>