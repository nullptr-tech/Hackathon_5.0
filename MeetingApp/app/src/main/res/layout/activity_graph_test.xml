<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphTest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <org.eazegraph.lib.charts.ValueLineChart
            android:id="@+id/cubiclinechart"
            android:layout_width="321dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            app:egCurveSmoothness="0.4"
            app:egIndicatorLineColor="#351CA8"
            app:egIndicatorShadowColor="#351CA8"
            app:egIndicatorTextColor="#351CA8"
            app:egLegendHeight="40dp"
            app:egShowStandardValue="true"
            app:egUseCubic="true"
            app:egUseOverlapFill="false">

        </org.eazegraph.lib.charts.ValueLineChart>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/aiPredictionTxt"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/bginfo"
                android:paddingTop="40dp"
                android:paddingBottom="240dp"
                android:text="Your performance:"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/piggie1"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                app:srcCompat="@drawable/pig_reward" />

            <ImageView
                android:id="@+id/piggie2"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                app:srcCompat="@drawable/pig_reward" />

            <ImageView
                android:id="@+id/piggie3"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="245dp"
                app:srcCompat="@drawable/pig_reward" />
        </RelativeLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>