<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:background="#FFFf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_display_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_avatar_final"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="299dp"
        android:layout_marginBottom="26dp"
        android:layout_toEndOf="@+id/img_avatar_final"
        android:layout_toRightOf="@+id/img_avatar_final"
        android:textColor="#212121"
        android:textStyle="bold"
        tools:text="Marcelino" />

    <TextView
        android:id="@+id/text_view_display_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_avatar_final"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="328dp"
        android:layout_marginBottom="26dp"
        android:layout_toEndOf="@+id/img_avatar_final"
        android:layout_toRightOf="@+id/img_avatar_final"
        android:textColor="@color/greyblue"
        android:textSize="8sp"
        tools:text="Marcelino" />

</RelativeLayout>